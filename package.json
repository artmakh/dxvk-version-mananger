{
  "name": "dxvk-version-mananger",
  "version": "0.1.0",
  "description": "Windows utility to manage versions of DXVK in installed games",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:forge": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artmakh/dxvk-version-mananger.git"
  },
  "keywords": [
    "dxvk",
    "vulkan",
    "directx",
    "gaming",
    "windows",
    "electron"
  ],
  "author": "DXVK Version Manager Contributors",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "^35.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "tar": "^7.4.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "name": "DXVK Version Manager",
        "platform": "win32",
        "arch": "x64"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        }
      ]
    }
  }
}
